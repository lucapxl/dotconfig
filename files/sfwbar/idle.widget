Module("idleinhibit");

layout {
  button {
    style = If(Ident(IdleInhibitState),"idleinhibitor_active","idleinhibitor_inactive")
    value = If(IdleInhibitState()="on",
        "icons/misc/lock.svg",
        "icons/misc/unlock.svg")
    local = true
    trigger = "idleinhibitor"
    action[1] = SetIdleInhibitor "toggle"
  }
}
