# Select terminal emulator to use
Set Term = "foot"

# Window Placer
placer {
  xorigin = 5  # place the first window at X% from the left
  yorigin = 5  # place the first window at X% from the top
  xstep = 5    # step by X% of desktop horizontally
  ystep = 5    # step by X% of desktop vertically
  children = true
}

include("winops.widget")
include("cal.widget")

layout {

  size = "100%"
  layer = "top"
  mirror = "*"
  bar_id = "bar-0"
  exclusive_zone = "auto"

  pager {
    style = "pager"
    rows = 1
    pins = "1","2","3","4"
    action[Drag] = WorkspaceActivate
  }

  label {
    css = "* { -GtkWidget-hexpand: true; }"
  }

  grid {
    css = "* { -GtkWidget-direction: bottom; }"
    action[0] = Function "XCalInit"
    action = Function "XCalPopUp"
    label {
      value = Time("%H:%M:%S")
      style ="clock"
    }

  }

  label {
    css = "* { -GtkWidget-hexpand: true; }"
  }

  tray {
    rows = 1
    style = "tray"
  }

  include("wbar-idleinhibit.widget")
  include("network-module.widget")
  include("wbar-pulse.widget")
  include("wbar-battery.widget")

}

#CSS
@define-color sfwbar-background #000000;
@define-color sfwbar-foreground #ecf0f1;
@define-color sfwbar-black #2c3e50;
@define-color sfwbar-blue #2980b9;
@define-color sfwbar-brightblack #7f8c8d;
@define-color sfwbar-brightwhite #ecf0f1;
@define-color sfwbar-cyan #3498db;
@define-color sfwbar-green #2ecc71;
@define-color sfwbar-magenta #9b59b6;
@define-color sfwbar-red #e74c3c;
@define-color sfwbar-white #ecf0f1;
@define-color sfwbar-yellow #f1c40f;


* {
    font-family: 'Adwaita Sans', 'Font Awesome 6 Free', 'Fira Sans Book', Arial, sans-serif;
    font-size: 16px;
    border: none;
    border-radius: 5px;
	  margin: 0;
	  padding: 0;
    margin: 0;
    text-shadow: none;
    -GtkWidget-vexpand: true;
    color: @waybar-foreground;
}

window#sfwbar {
  -GtkWidget-direction: top;
  background-color: rgba(0,0,0,0.6);
  border-radius: 0;
}

#hidden {
  -GtkWidget-visible: false;
}

label, button {
  color: @waybar-foreground;
  min-height: 0px;
  outline-style: none;
  box-shadow: none;
  background-image: none;
  border-image: none;
  padding: 0 8px;
  margin: 4px 2px;
}

image {
  -ScaleImage-symbolic: true;
}

#idleinhibitor_active {
    color: @waybar-cyan;
}

#idleinhibitor_inactive {
    color: @waybar-black;
}

button#pager_item {
  padding: 0 0.6em;
  background: transparent;
  color: @sfwbar-foreground;
  box-shadow: none;
  margin: 4px 2px;
}

button#pager_item.focused {
  background-color: @sfwbar-black;
}

button#tray_item {
  margin: 0px;
  border: none;
  padding: 0px;
}

button#tray_item.passive {
  -GtkWidget-visible: false;
}

button#tray_item image {
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
  padding: 3px;
  margin: 0px;
  border: none;
}

grid#pager {
  border-color: @theme_fg_color;
  border-style: solid;
  border-width: 0px;
  margin: 2px;
  padding: 0px;
}

button#pager_item {
  border-radius: 5px;
  border: none;
  outline: 0px;
  margin-right: 2px;
  margin-left: 2px;
  padding: 5px 10px;
  -GtkWidget-halign: center;
  -GtkWidget-valign: center;
}

button#pager_preview {
  border-radius: 0;
  border-color: #000000;
  border-width: 0.25mm;
  color: @sfwbar-foreground;
  min-width: 5cm;
  min-height: 2.8125cm;
}

label#clock {
  padding-left: 2px;
  padding-right: 2px;
  -GtkWidget-vexpand: true;
  -GtkWidget-valign: center;
  color: @sfwbar-foreground;
  font-size: 20px;
  font-family: 'Noto Sans Mono';
}
